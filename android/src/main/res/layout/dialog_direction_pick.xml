<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:uilib="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:clickable="true"
    android:focusable="true"
    android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/control_ll"
            android:orientation="vertical"
            android:background="@color/white">
            <com.ui.controls.ListSelectItem
                android:id="@+id/lsi_direction_backward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:ImageRight1="@drawable/correct_nor"
                uilib:ImageRight2="@drawable/correct_sel"
                uilib:ItemTitleColor="@color/default_normal_text_color"
                uilib:ItemTitleSize="@dimen/normal_text_size"
                uilib:Title="Into_alert"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"/>
            <com.xm.ui.widget.ListSelectItem
                android:id="@+id/lsi_direction_forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:ImageRight1="@drawable/correct_nor"
                uilib:ImageRight2="@drawable/correct_sel"
                uilib:ItemTitleColor="@color/default_normal_text_color"
                uilib:ItemTitleSize="@dimen/normal_text_size"
                uilib:Title="Leave_alert"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"/>
            <com.xm.ui.widget.ListSelectItem
                android:id="@+id/lsi_direction_two_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                uilib:ImageRight1="@drawable/correct_nor"
                uilib:ImageRight2="@drawable/correct_sel"
                uilib:ItemTitleColor="@color/default_normal_text_color"
                uilib:ItemTitleSize="@dimen/normal_text_size"
                uilib:Title="Two-way_alert"
                uilib:LineColor="@color/line_color"
                uilib:RightClickable="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/control_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.99"
                android:background="@drawable/textcolor_gray_selector"
                android:gravity="center"
                android:text="cancel"
                android:textColor="@color/default_normal_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.99"
                android:background="@drawable/textcolor_gray_selector"
                android:gravity="center"
                android:text="confirm"
                android:textColor="@color/theme_color"
                android:textSize="16sp" />
        </LinearLayout>
</RelativeLayout>